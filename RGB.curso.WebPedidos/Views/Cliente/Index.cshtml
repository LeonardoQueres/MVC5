@model IEnumerable<RGB.curso.aplicacao.AppPedidos.ViewModels.ClienteViewModel>

@{
    ViewBag.Title = "Lista de Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Clientes</h2>

<p>
    <a href="@Url.Action("Incluir", "Cliente")" class="btn btn-primary">
        <i class="glyphicon glyphicon-plus"></i>
        <span>
            <strong>Novo Cliente</strong>
        </span>
    </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Apelido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.Label("Endereço")
        </th>
        <th></th>

    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Apelido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Endereco.Endereco)
        </td>
        <td>
            <a href="@Url.Action("Alterar", "Cliente", new { id = item.Id } )" class="btn btn-success">
                <i class="glyphicon glyphicon-pencil"></i>
            </a>

            <a href="@Url.Action("Excluir", "Cliente", new { id = item.Id } )" class="btn btn-danger">
                <i class="glyphicon glyphicon-trash"></i>
            </a>
        </td>
    </tr>
}

</table>
